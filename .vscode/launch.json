{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "android",
            "request": "launch",
            "name": "Android launch: camera",
            "appSrcRoot": "${workspaceRoot}/camera/src/main",
            "apkFile": "${workspaceRoot}/camera/build/outputs/apk/debug/camera-debug.apk",
            "adbPort": 5037,
            "preLaunchTask": "gradle: camera:assembleDebug"
        },
        {
            "type": "android",
            "request": "launch",
            "name": "Android launch: monitor",
            "appSrcRoot": "${workspaceRoot}/monitor/src/main",
            "apkFile": "${workspaceRoot}/monitor/build/outputs/apk/debug/monitor-debug.apk",
            "adbPort": 5037,
            "preLaunchTask": "gradle: monitor:assembleDebug"
        },
        {
            "type": "android",
            "request": "attach",
            "name": "Android attach: camera",
            "appSrcRoot": "${workspaceRoot}/camera/src/main",
            "adbPort": 5037,
            "processId": "${command:PickAndroidProcess}"
        }
    ]
}